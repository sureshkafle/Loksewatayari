@page "/notice-detail/{id}"
@model LokFrontend.Pages.NoticeDetail.Notice_detailModel

<section class="notice-detail-section">
  <div class="notice-detail-container">
    <h2>@Model.Notice.Title</h2>
    <p class="notice-detail-date">@Model.Notice.PublishDate</p>
    <p class="notice-detail-content">@Model.Notice.Description</p>
    <a href="@Model.Notice.AttachmentUrl" target="_blank">@Model.Notice.AttachmentUrl</a>
    @foreach (var item in Model.Notice.File)  // files is List<string> or string[]
    {
        var ext = System.IO.Path.GetExtension(item).ToLower();

        if (ext == ".jpg" || ext == ".jpeg" || ext == ".png" || ext == ".gif")
        {
            <img src="@item" alt="Image" style="max-width:200px; max-height:200px;" />
        }
        else if (ext == ".pdf")
        {
            <a href="@item" download>Download PDF</a>
        }
        else
        {
            <span>Unsupported file type: @item</span>
        }
    }
    <a href="/notices" class="back-btn">← Back to Notices</a>
  </div>
</section>

